{
  "entities": {
    "User": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "User",
      "type": "object",
      "description": "Represents a user within the CondoConnect application.",
      "properties": {
        "id": {
          "type": "string",
          "description": "Unique identifier for the user entity, matches Firebase Auth UID."
        },
        "name": {
          "type": "string",
          "description": "The full name of the user."
        },
        "email": {
          "type": "string",
          "description": "The email address of the user.",
          "format": "email"
        },
        "phone": {
          "type": "string",
          "description": "The phone number of the user."
        },
        "type": {
          "type": "string",
          "description": "Type of resident (e.g., titular, dependente, visitante frequente)."
        },
        "vehicles": {
          "type": "array",
          "description": "List of vehicles associated with the resident.",
          "items": {
            "type": "object",
            "properties": {
              "plate": { "type": "string" },
              "model": { "type": "string" },
              "color": { "type": "string" }
            },
            "required": ["plate"]
          }
        }
      },
      "required": [
        "id",
        "name",
        "email"
      ]
    },
    "Condominium": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "Condominium",
      "type": "object",
      "description": "Represents a condominium complex.",
      "properties": {
        "id": {
          "type": "string",
          "description": "Unique identifier for the condominium entity."
        },
        "name": {
          "type": "string",
          "description": "The name of the condominium."
        },
        "cnpj": {
          "type": "string",
          "description": "The CNPJ (optional) of the condominium."
        },
        "address": {
          "type": "string",
          "description": "The address of the condominium."
        },
        "settings": {
          "type": "string",
          "description": "Settings for the condominium (e.g., quiet hours, reservation rules)."
        }
      },
      "required": [
        "id",
        "name",
        "address"
      ]
    },
    "Block": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "Block",
      "type": "object",
      "description": "Represents a block or tower within a condominium.",
      "properties": {
        "id": {
          "type": "string",
          "description": "Unique identifier for the block entity."
        },
        "condominiumId": {
          "type": "string",
          "description": "Reference to Condominium."
        },
        "name": {
          "type": "string",
          "description": "The name or identifier of the block (e.g., Block A, Tower 1)."
        }
      },
      "required": [
        "id",
        "condominiumId",
        "name"
      ]
    },
    "Unit": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "Unit",
      "type": "object",
      "description": "Represents a unit (apartment) within a block.",
      "properties": {
        "id": {
          "type": "string",
          "description": "Unique identifier for the unit entity."
        },
        "condominiumId": {
          "type": "string",
          "description": "Reference to Condominium."
        },
        "blockId": {
          "type": "string",
          "description": "Reference to Block."
        },
        "number": {
          "type": "string",
          "description": "The unit number or apartment number."
        },
        "parking_spot": {
          "type": "string",
          "description": "The parking spot associated with the unit."
        },
        "status": {
          "type": "string",
          "description": "Status of the unit (e.g., occupied, empty)."
        }
      },
      "required": [
        "id",
        "condominiumId",
        "blockId",
        "number"
      ]
    },
    "Announcement": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "Announcement",
      "type": "object",
      "description": "Represents an announcement or communication to residents.",
      "properties": {
        "id": {
          "type": "string"
        },
        "condominiumId": {
          "type": "string"
        },
        "title": {
          "type": "string"
        },
        "message": {
          "type": "string"
        },
        "type": {
          "type": "string",
          "enum": ["urgente", "geral", "financeiro"]
        },
        "destination": {
          "type": "string",
          "description": "Target audience (e.g., 'todos', a blockId, or a unitId)."
        },
        "published_at": {
          "type": "string",
          "format": "date-time"
        },
        "authorId": {
          "type": "string"
        }
      },
      "required": [
        "id",
        "condominiumId",
        "title",
        "message",
        "type",
        "destination",
        "published_at",
        "authorId"
      ]
    },
    "Reservation": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "Reservation",
      "type": "object",
      "description": "Represents a reservation for an amenity.",
      "properties": {
        "id": { "type": "string" },
        "condominiumId": { "type": "string" },
        "unitId": { "type": "string" },
        "residentId": { "type": "string" },
        "area": { "type": "string" },
        "start_date": { "type": "string", "format": "date-time" },
        "end_date": { "type": "string", "format": "date-time" },
        "status": { "type": "string", "enum": ["pendente", "aprovada", "cancelada"] },
        "created_at": { "type": "string", "format": "date-time" }
      },
      "required": ["id", "condominiumId", "unitId", "residentId", "area", "start_date", "end_date", "status", "created_at"]
    },
    "Incident": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "Incident",
      "type": "object",
      "description": "Represents an incident or issue reported by a resident.",
      "properties": {
        "id": { "type": "string" },
        "condominiumId": { "type": "string" },
        "unitId": { "type": "string" },
        "residentId": { "type": "string" },
        "description": { "type": "string" },
        "type": { "type": "string", "enum": ["barulho", "manutencao", "seguranca"] },
        "status": { "type": "string", "enum": ["aberta", "em analise", "resolvida"] },
        "attachments": { "type": "array", "items": { "type": "string", "format": "uri" } },
        "created_at": { "type": "string", "format": "date-time" },
        "updated_at": { "type": "string", "format": "date-time" }
      },
      "required": ["id", "condominiumId", "residentId", "description", "type", "status", "created_at", "updated_at"]
    },
    "GateRecord": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "GateRecord",
      "type": "object",
      "description": "Represents a gate record for visitors, staff, etc.",
      "properties": {
        "id": { "type": "string" },
        "condominiumId": { "type": "string" },
        "type": { "type": "string", "enum": ["entrada", "saida"] },
        "person": { "type": "string" },
        "document": { "type": "string" },
        "vehicle": { "type": "string" },
        "destination_unitId": { "type": "string" },
        "registered_by": { "type": "string" },
        "timestamp": { "type": "string", "format": "date-time" }
      },
      "required": ["id", "condominiumId", "type", "person", "destination_unitId", "registered_by", "timestamp"]
    },
    "UserRole": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "UserRole",
      "type": "object",
      "description": "Assigns a role to a user for a specific condominium.",
      "properties": {
        "id": { "type": "string", "description": "Composite key: {userId}_{condominiumId}"},
        "userId": { "type": "string" },
        "condominiumId": { "type": "string" },
        "role": { "type": "string", "enum": ["sindico", "porteiro", "morador", "admin_sistema"] }
      },
      "required": ["id", "userId", "condominiumId", "role"]
    }
  },
  "auth": {
    "providers": [
      "password"
    ]
  },
  "firestore": {
    "structure": [
      {
        "path": "/condominios/{condominioId}",
        "definition": {
          "entityName": "Condominium",
          "schema": { "$ref": "#/backend/entities/Condominium" },
          "description": "Stores condominium information."
        }
      },
      {
        "path": "/condominios/{condominioId}/blocos/{blocoId}",
        "definition": {
          "entityName": "Block",
          "schema": { "$ref": "#/backend/entities/Block" },
          "description": "Stores block information within a condominium."
        }
      },
      {
        "path": "/condominios/{condominioId}/unidades/{unidadeId}",
        "definition": {
          "entityName": "Unit",
          "schema": { "$ref": "#/backend/entities/Unit" },
          "description": "Stores unit information within a condominium."
        }
      },
      {
        "path": "/moradores/{moradorId}",
        "definition": {
          "entityName": "User",
          "schema": { "$ref": "#/backend/entities/User" },
          "description": "Stores resident profile information, linked to a user account."
        }
      },
      {
        "path": "/reservas/{reservaId}",
        "definition": {
          "entityName": "Reservation",
          "schema": { "$ref": "#/backend/entities/Reservation" },
          "description": "Stores amenity reservations."
        }
      },
      {
        "path": "/ocorrencias/{ocorrenciaId}",
        "definition": {
          "entityName": "Incident",
          "schema": { "$ref": "#/backend/entities/Incident" },
          "description": "Stores incident reports."
        }
      },
      {
        "path": "/avisos/{avisoId}",
        "definition": {
          "entityName": "Announcement",
          "schema": { "$ref": "#/backend/entities/Announcement" },
          "description": "Stores general announcements."
        }
      },
      {
        "path": "/portaria_registros/{registroId}",
        "definition": {
          "entityName": "GateRecord",
          "schema": { "$ref": "#/backend/entities/GateRecord" },
          "description": "Stores gate entry and exit records."
        }
      },
      {
        "path": "/usuarios_roles/{roleId}",
        "definition": {
          "entityName": "UserRole",
          "schema": { "$ref": "#/backend/entities/UserRole" },
          "description": "Stores user roles for each condominium. Document ID is a composite key."
        }
      }
    ]
  }
}
